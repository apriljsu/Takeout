<%- include('./partials/header.ejs') %>
  <body>
    <h1>This is the show page for <%=restaurant.name%></h1>
    <ul>
      <li>
        Restaurant Name: <%=restaurant.name%><br>
        Rating: <%=restaurant.rating%><br>
        Favorite Dishes: <%=restaurant.favDishes%><br>
        Is this a new restaurant:<%=restaurant.isNewRestaurant%><br>
        <img src=<%=restaurant.img%> alt="restaurant img">
      </li>
    </ul>
    <form action="/restaurants/<%=restaurant.id%>?_method=DELETE" method="POST">
      <input type="submit" value="Delete Restaurant">
    </form>
    <a href="/restaurants/<%=restaurant.id%>/edit">
      <button type="button" name="button">Edit</button>
    </a>
  </body>
</html>
